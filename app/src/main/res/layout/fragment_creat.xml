<?xml version="1.0" encoding="utf-8"?>


<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"

    android:layout_height="match_parent"

    tools:context="Fragments.FragmentCreat">


    <LinearLayout

        android:id="@+id/linear"

        android:layout_width="match_parent"

        android:layout_height="match_parent"

        android:orientation="vertical"

        android:paddingVertical="20dp"

        android:paddingHorizontal="30dp">


        <TextView

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:text="create_employees"

            android:layout_gravity="center"

            android:textSize="25sp"/>


        <EditText

            android:id="@+id/edit_name"

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:layout_marginTop="20dp"

            android:autofillHints="name"

            android:inputType="text"

            android:hint="employee_name"/>


        <EditText

            android:id="@+id/edit_address"

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:layout_marginTop="20dp"

            android:inputType="text"

            android:hint="employee_address"

            android:autofillHints="address" />


        <EditText

            android:id="@+id/edit_phone"

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:layout_marginTop="20dp"

            android:inputType="phone"

            android:hint="employee_phone"

            android:autofillHints="phone" />


        <EditText

            android:id="@+id/edit_salary"

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:layout_marginTop="20dp"

            android:inputType="number"

            android:hint="salary"

            android:autofillHints="salary" />


        <Button

            android:id="@+id/btn_create"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_gravity="center_horizontal"

            android:background="@color/colorPrimary"

            android:layout_marginTop="20dp"

            android:text="submit"

            android:textColor="@android:color/white"/>



    </LinearLayout>


    <ProgressBar

        android:id="@+id/progress_circular"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:layout_gravity="center"

        android:visibility="invisible"/>


</FrameLayout>